# set variables
export MANPAGER="sh -c 'col -bx | bat -l man -p'"

# change zsh options

# create aliases

alias ls='exa -1aFh --git --icons'
alias exa='exa -1aFh --git --icons'

# customize prompt
PROMPT='
%n@%m %1~ %L %# '

RPROMPT='%*'

# add locations to $PATH
export PATH=$PATH:$HOME/.local/bin

# functions
function mkcd() {
  mkdir -p "$@" && cd "$_";
}

